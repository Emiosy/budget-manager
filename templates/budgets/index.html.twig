{% extends 'base.html.twig' %}

{% block title %}Moje budżety - Budget Manager{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Moje budżety</h1>
            <button type="button" 
                    class="btn btn-primary" 
                    data-controller="modal" 
                    data-action="click->modal#openCreateBudget">
                <i class="fas fa-plus me-2"></i>Nowy budżet
            </button>
        </div>
    </div>
</div>

{% if budgets is empty %}
    <div class="row">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-wallet fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">Nie masz jeszcze żadnych budżetów</h3>
                <p class="text-muted">Utwórz swój pierwszy budżet, aby zacząć zarządzać finansami</p>
                <button type="button" 
                        class="btn btn-primary btn-lg" 
                        data-controller="modal" 
                        data-action="click->modal#openCreateBudget">
                    <i class="fas fa-plus me-2"></i>Utwórz pierwszy budżet
                </button>
            </div>
        </div>
    </div>
{% else %}
    <div class="row">
        {% for budget in budgets %}
            <div class="col-md-6 col-xl-4 mb-4">
                <div class="card budget-card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">{{ budget.name }}</h5>
                            <span class="badge {% if budget.balance >= 0 %}bg-success{% else %}bg-danger{% endif %}">
                                {{ budget.balance|number_format(2, ',', ' ') }} zł
                            </span>
                        </div>
                        
                        {% if budget.description %}
                            <p class="card-text text-muted">{{ budget.description }}</p>
                        {% endif %}
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    {{ budget.createdAt|date('d.m.Y') }}
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-exchange-alt me-1"></i>
                                    {{ budget.transactions|length }} transakcji
                                </small>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a href="{{ path('budgets_show', {id: budget.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Szczegóły
                                </a>
                                <button type="button" 
                                        class="btn btn-outline-success btn-sm" 
                                        data-controller="modal" 
                                        data-action="click->modal#openCreateTransaction"
                                        data-modal-budget-id-param="{{ budget.id }}"
                                        data-modal-budget-name-param="{{ budget.name }}"
                                        data-modal-source-param="budgets_index">
                                    <i class="fas fa-plus me-2"></i>Dodaj transakcję
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<!-- Create Budget Modal -->
<div class="modal fade" id="createBudgetModal" tabindex="-1" aria-labelledby="createBudgetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBudgetModalLabel">
                    <i class="fas fa-plus me-2"></i>Nowy budżet
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createBudgetForm" method="post" action="{{ path('budgets_new') }}">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="budget_name" class="form-label">Nazwa budżetu <span class="text-danger">*</span></label>
                        <input type="text" name="name" id="budget_name" class="form-control" required placeholder="np. Oszczędności wakacyjne">
                        <div class="form-text">Podaj krótką i opisową nazwę dla swojego budżetu</div>
                    </div>
                    <div class="mb-3">
                        <label for="budget_description" class="form-label">Opis <span class="text-muted">(opcjonalne)</span></label>
                        <textarea name="description" id="budget_description" class="form-control" rows="3" placeholder="Dodaj szczegółowy opis budżetu..."></textarea>
                        <div class="form-text">Opisz cel i przeznaczenie tego budżetu</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Utwórz budżet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Create Transaction Modal -->
<div class="modal fade" id="createTransactionModal" tabindex="-1" aria-labelledby="createTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTransactionModalLabel">
                    <i class="fas fa-plus me-2"></i>Nowa transakcja
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createTransactionForm" method="post">
                <div class="modal-body">
                    <div class="mb-3" style="display: none;">
                        <input type="hidden" name="budget_name" id="transaction_budget_name">
                        <input type="hidden" name="budget_id" id="transaction_budget_id">
                        <input type="hidden" name="source" id="transaction_source">
                    </div>
                    <div class="mb-3">
                        <label for="transaction_amount" class="form-label">Kwota <span class="text-danger">*</span></label>
                        <input type="text" name="amount" id="transaction_amount" class="form-control" required placeholder="0,00" pattern="[0-9]+([,.][0-9]{1,2})?">
                        <div class="form-text">Wprowadź kwotę transakcji (max 2 miejsca po przecinku)</div>
                    </div>
                    <div class="mb-3">
                        <label for="transaction_type" class="form-label">Typ transakcji <span class="text-danger">*</span></label>
                        <select name="type" id="transaction_type" class="form-select" required>
                            <option value="">Wybierz typ</option>
                            <option value="income">(+) Przychód</option>
                            <option value="expense">(-) Wydatek</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="transaction_comment" class="form-label">Komentarz <span class="text-danger">*</span></label>
                        <input type="text" name="comment" id="transaction_comment" class="form-control" required placeholder="np. Zakup produktów spożywczych">
                        <div class="form-text">Opisz czego dotyczy ta transakcja</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Dodaj transakcję
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}