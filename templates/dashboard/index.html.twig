{% extends 'base.html.twig' %}

{% block title %}Dashboard - Budget Manager{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Dashboard</h1>
            <button type="button" 
                    class="btn btn-primary" 
                    data-controller="modal" 
                    data-action="click->modal#openCreateBudget">
                <i class="fas fa-plus me-2"></i>Nowy budżet
            </button>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Saldo ogółem</h5>
                        <h3 class="mb-0 {% if totalBalance >= 0 %}text-white{% else %}text-warning{% endif %}">
                            {{ totalBalance|number_format(2, ',', ' ') }} zł
                        </h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-wallet fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Wpływy</h5>
                        <h3 class="mb-0">{{ totalIncomes|number_format(2, ',', ' ') }} zł</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-arrow-up fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Wydatki</h5>
                        <h3 class="mb-0">{{ totalExpenses|number_format(2, ',', ' ') }} zł</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-arrow-down fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Liczba budżetów</h5>
                        <h3 class="mb-0">{{ budgetCount }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-list fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="h4 mb-3">Twoje budżety</h2>
        
        {% if budgets is empty %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Nie masz jeszcze żadnych budżetów. <button type="button" 
                        class="btn btn-link alert-link p-0 align-baseline" 
                        data-controller="modal" 
                        data-action="click->modal#openCreateBudget">Utwórz pierwszy budżet</button>
            </div>
        {% else %}
            <div class="row">
                {% for budget in budgets %}
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card budget-card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ budget.name }}</h5>
                                {% if budget.description %}
                                    <p class="card-text text-muted">{{ budget.description }}</p>
                                {% endif %}
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="h5 mb-0 {% if budget.balance >= 0 %}balance-positive{% else %}balance-negative{% endif %}">
                                        {{ budget.balance|number_format(2, ',', ' ') }} zł
                                    </span>
                                    <a href="{{ path('budgets_show', {id: budget.id}) }}" class="btn btn-outline-primary btn-sm">
                                        Szczegóły <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-footer text-muted small">
                                <i class="fas fa-clock me-1"></i>
                                Utworzono: {{ budget.createdAt|date('d.m.Y H:i') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<!-- Create Budget Modal -->
<div class="modal fade" id="createBudgetModal" tabindex="-1" aria-labelledby="createBudgetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBudgetModalLabel">
                    <i class="fas fa-plus me-2"></i>Nowy budżet
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createBudgetForm" method="post" action="{{ path('budgets_new') }}">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="budget_name" class="form-label">Nazwa budżetu <span class="text-danger">*</span></label>
                        <input type="text" name="name" id="budget_name" class="form-control" required placeholder="np. Oszczędności wakacyjne">
                        <div class="form-text">Podaj krótką i opisową nazwę dla swojego budżetu</div>
                    </div>
                    <div class="mb-3">
                        <label for="budget_description" class="form-label">Opis <span class="text-muted">(opcjonalne)</span></label>
                        <textarea name="description" id="budget_description" class="form-control" rows="3" placeholder="Dodaj szczegółowy opis budżetu..."></textarea>
                        <div class="form-text">Opisz cel i przeznaczenie tego budżetu</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Utwórz budżet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}